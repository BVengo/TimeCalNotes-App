import java.util.Scanner;
public class Timer 
{
	static long timerLength;
	static long endTime;
	static int numHours, numMins, numSecs;
	
	final static int NANOTOSEC = 1_000_000_000;
	
	static Scanner scnr = new Scanner(System.in);
	
	public static void main(String[] args)
	{
		System.out.print("Hours (0-24): ");
		numHours = scnr.nextInt();
		
		System.out.print("Minutes (0-60): ");
		numMins = scnr.nextInt();
		
		System.out.print("Seconds (0-60): ");
		numSecs = scnr.nextInt();
		
		timerLength = (numHours * 60 * 60 * NANOTOSEC) + (numMins * 60 * NANOTOSEC) + (numSecs * NANOTOSEC);
		
		System.out.print("Begin? (y/n)");
		if (scnr.next().equals("y"))
		{			
			System.out.println("Controls: STOP, PAUSE, CONTINUE");

			System.out.println("Start time: 0");

			BeginTimer(timerLength);
		}
		else System.out.println("Cancelled timer");
		
		
		
	}
	//TODO: Fix timer - is slightly off
	public static void BeginTimer(long timerLength)
	{
		
		long endLength = System.nanoTime() + timerLength;
		
		long startTime = System.nanoTime();
		
		while (System.nanoTime() < endLength);
		
		endTime = (System.nanoTime() - startTime);
		
		System.out.println("End Time: " + endTime);
	}
}
